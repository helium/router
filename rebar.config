{erl_opts, [
            debug_info,
            {parse_transform, lager_transform},
            warnings_as_errors
           ]}.



{deps, [
        {lager, "3.7.0"},
        {blockchain, {git, "git@github.com:helium/blockchain-core.git", {branch, "macpie/ch5377/data-credits-state-channels"}}},
        {helium_proto, {git, "https://github.com/helium/proto.git", {branch, "master"}}},
        {e2qc, {git, "https://github.com/project-fifo/e2qc", {branch, "master"}}},
        {jsx, {git, "https://github.com/talentdeficit/jsx.git", {branch, "v2.8.0"}}},
        {kvc, {git, "https://github.com/etrepum/kvc", {tag, "v1.7.0"}}},
        {longfi, {git, "https://github.com/helium/longfi-erlang", {branch, "master"}}},
        {observer_cli, "1.5.0"},
        {hackney, "1.15.2"}
       ]}.

{plugins, [
           rebar3_fmt
          ]}.

{xref_checks, [
               undefined_function_calls,
               undefined_functions
              ]}.


{profiles, [
            {test, [
                    {deps, [{meck, "0.8.12"},
                            {elli, "3.2.0"}]}
                   ]}
           ]}.

{relx, [
        {release, {"router", "1.0.0"}, [router]},
        {vm_args, "./config/vm.args"},
        {sys_config, "./config/sys.config"},
        {extended_start_script, true},
        {include_src, true}
       ]}.
